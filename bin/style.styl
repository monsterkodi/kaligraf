.tools
    -webkit-app-region      drag

.tool
    position                absolute
    width                   toolSize
    height                  toolSize
    cursor                  pointer
    &.down
        height              toolSize / 2

.tool .title
    text-align              center
    padding-top             4px
    padding-bottom          4px
    color                   #888
    
.tool:hover .title
    text-shadow             0 0 1px black
    color                   #bbb

.tools .title
    margin-top              34px

.toolButtons
    width                   80%
    margin-left             10%
    display                 inline-flex
    margin-bottom           -1px

.toolIcon
.toolButton
.toolLabel
    z-index                 0
    flex                    1
    color                   #888
    text-align              center
    box-sizing              border-box
    margin-right            -1px
    
.toolToggle
    color                   #444

.toolToggle.active
    color                   #bbb
    z-index                 1
    
.toolButton
    &:hover
        z-index             1
        color               #fff
    &:active
        color               #fff
        background          linear-gradient(to bottom, transparent, #444)
    &:first-child
        border-top-left-radius    4px
        border-bottom-left-radius 4px
        
    &:last-child
        border-top-right-radius    4px
        border-bottom-right-radius 4px
       
    border                  1px solid #181818
    background              linear-gradient(to bottom, transparent, #181818)

.toolToggle:hover:not(.active)
    color                   #666

.toolIcon
    padding-top             1px
    padding-bottom          1px
    height                 35px
    position               relative
    
.toolIconSVG
    opacity                 0.6
    position                absolute
    left                    0
    top                     4px
    width                   25px
    height                  25px
    &:hover:not(:active)
        top                 0
        left                -3px
        opacity             1.0
        width               31px
        height              31px
 
.toolTiny    
    height                  18px
    & .toolIconSVG
        width               15px
        height              15px        
        top                 0
        &:hover:not(:active)  
            top             -3px
            left            -3px   
            width           22px
            height          22px
        
.toolSVG
    position                absolute
    left                    25%
    top                     25%
    width                   50%
    height                  50%
    opacity                 0.6
    &:hover:active
        opacity             1
    &:hover:not(:active)
        opacity             0.8
        left                20%
        top                 20%
        width               60%
        height              60%
    
.active .toolSVG
.active .toolSVG:hover   
    left                    10%
    top                     10%
    width                   80%
    height                  80%
    opacity                 1
    
.tool.fill
    border                  1px solid

