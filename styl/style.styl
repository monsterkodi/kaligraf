.resizerSVG
    opacity                 1
    &.resizerInactive
        opacity             0.3
    
.resizerGroup
    cursor                  -webkit-grab
    pointer-events          all
    &.resizerInactive
        pointer-events      none
        
.resizerRect
    fill                    rgba(0,0,0,0.1)
    cursor                  move
    stroke                  none

.resizerBorder
    fill                    #88f
    fill-opacity            0.3
    stroke                  none
    
.resizerCorner
    fill                    #88f
    
.resizerItemRect
    fill                    none
    stroke                  #44f
    stroke-dasharray        2,2
    
