.pointDot
    stroke                  #fff
    fill                    #000

    &.selected
        stroke              #ff0
        fill                #f00

.ctrl1Dot
.ctrl2Dot
.ctrlsDot
.ctrlqDot
    stroke                  #000
    fill                    #fff

