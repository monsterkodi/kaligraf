.toolButtons
    width                   80%
    margin-left             10%
    display                 inline-flex
    margin-bottom           -1px

.toolIcon
.toolButton
.toolLabel
    z-index                 0
    flex                    1
    color                   #888
    text-align              center
    box-sizing              border-box
    margin-right            -1px
    
.toolToggle
.toolSpinButton
    color                   #444
    & .toolIconSVG
        opacity             0.2
        
.toolToggle.active
    color                   #bbb
    z-index                 1
    & .toolIconSVG
        opacity             0.6
    
.toolButton
    &:hover
        z-index             1
        color               #fff
    &:active
        color               #fff
        background          linear-gradient(to bottom, transparent, #444)
    &:first-child
        border-top-left-radius    4px
        border-bottom-left-radius 4px
        
    &:last-child
        border-top-right-radius    4px
        border-bottom-right-radius 4px
       
