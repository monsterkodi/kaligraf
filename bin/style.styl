    color                   #666
    & .toolIconSVG
        opacity             1
        
.toolIcon
    padding-top             1px
    padding-bottom          1px
    height                 35px
    position               relative
    
.toolIconSVG
    opacity                 0.5
    position                absolute
    left                    0
    top                     4px
    height                  25px
    overflow                visible
    &:hover:not(:active)
        top                 0
        opacity             1.0
        height              31px
 
.toolSmall 
    height                  24px
    & .toolIconSVG
        height              20px        
        top                 0
        &:hover:not(:active)  
            top             -2px
            height          24px
        
.toolTiny    
    height                  18px
    & .toolIconSVG
        height              15px        
        top                 0
        &:hover:not(:active)  
            top             -3px
            height          22px
        
.toolSVG
    position                absolute
    left                    25%
    top                     25%
    width                   50%
    height                  50%
    opacity                 0.6
    &:hover:active
        opacity             1
    &:hover:not(:active)
        opacity             0.8
        left                20%
        top                 20%
        width               60%
        height              60%
    
.active .toolSVG
.active .toolSVG:hover   
    left                    10%
    top                     10%
    width                   80%
    height                  80%
    opacity                 1
    
