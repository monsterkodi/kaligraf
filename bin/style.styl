.browser
    font()
    background              #333
    
.browserTitle
    color                   #888
    -webkit-app-region      drag
    padding-left            toolSize

.browserTitleClose
    position                absolute
    right                   0
    background              #333
    color                   #222
    
.browserTitleText
    margin-left             76px
    
.browserScroll
    height                  100%
    overflow                hidden

.browserItems
    display                 block
    transform-origin        top left
    white-space             nowrap
    height                  100%
    
.browserItem
    display                 inline-block
    vertical-align          top
    cursor                  pointer
    margin-top              150px
    margin-right            200px
            
    &.selected
        border-radius       12px
        border              4px solid #282828
        box-sizing          border-box
            
.browserItemTitle
    position                relative
    background              #333
    border-top-left-radius  8px
    border-top-right-radius 8px        
    
.browserItemTitleText
.browserItemTitleButton
    font-size               12px
    padding 6px
    color                   #282828
    &:hover
        color               #888
    
.browserItem.selected .browserItemTitleText
.browserItem.selected .browserItemTitleButton
    color                   #fff
    &:hover
        color               yellow
        
.browserItemTitleButton
    background              transparent
    &:hover
        color               yellow
    
.browserItemTitleClose
    font-size               13px
    color                   #282828
    background              transparent
    &:hover
        background          transparent
    position                absolute
    right                   0
    top                     0
    
.browserItemView
    & svg 
        border-radius    8px
    height                  1000px
    width                   1.5 * 1000px
    pointer-events          none
    
.browserItem.selected .browserItemView svg
    border-top-left-radius   0px
    border-top-right-radius  0px

