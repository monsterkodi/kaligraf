.layerList
    cursor                  -webkit-grab
    position                absolute
    top                     0
    right                   0
    overflow                hidden  
    border-bottom-left-radius 6px
    border-top-left-radius 6px
    border                  1px solid #222
    
.layerListScroll
    overflow-y              auto //scroll
    box-sizing              border-box
    margin                  0
    padding                 0
    cursor                  pointer
    &::-webkit-scrollbar
        width               scrollhandleWidth
        background          transparent
        
    &::-webkit-scrollbar-track
        border-left         1px solid #222
    &::-webkit-scrollbar-thumb
        width               scrollhandleWidth
        background          #222
    
.layerListFooter
    display                 block
    height                  12px
    background              #222
   
.layerListLayer
    margin                  0
    width                   180px
    height                  120px
    cursor                  pointer
    box-sizing              border-box
    border-bottom           1px solid #222
    &.active
        border              1px solid #fff
    
.layerListLayerSVG
    pointer-events          none
    display                 block
    margin                  0
    padding                 0
    
