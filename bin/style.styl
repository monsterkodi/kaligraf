.layerList
    cursor                  default
    position                absolute
    top                     0
    right                   0
    overflow                hidden  
    border                      1px solid #222
    border-bottom-left-radius   6px
    border-top-left-radius      6px
    
.layerListScroll
    overflow-y              auto
    box-sizing              border-box
    margin                  0
    padding                 0
    cursor                  pointer
    &::-webkit-scrollbar
        width               scrollhandleWidth
        background          transparent
        
    &::-webkit-scrollbar-track
        border-left         1px solid #222
    &::-webkit-scrollbar-thumb
        width               scrollhandleWidth
        background          #222
    
.layerListFooter
.gradientListFooter
    display                 block
    height                  12px
    background              #222
   
.layerListLayer
    z-index                 0
    position                relative
    margin                  0
    width                   240px
    height                  160px
    overflow                hidden
    cursor                  pointer
    box-sizing              border-box
    // background              white
    border                  1px solid #222
    &.active
        border              1px solid #fff
    
.layerListSVG
.gradientItemSVG
    pointer-events          none
    display                 block
    margin                  0
    padding                 0
    
.layerListMenuLeft
    position                absolute
    top                     0
    left                    0
    opacity                 0
    &.opaque
        opacity             1
    
.layerListMenuRight
    position                absolute
    top                     0
    right                   0
    opacity                 0

.layerListLayer:hover .layerListMenuLeft
.layerListLayer:hover .layerListMenuRight
    opacity                 1
    
.layerListButton
    font()
    overflow                hidden
    font-size               10px
    cursor                  default
    background              #222
    height                  24px
    width                   24px
    display                 block
    padding                 3px
    
.layerListLayer:not(:hover) .layerListMenuLeft.opaque .layerListButton
    background              rgba(0,0,0,0)
.layerListLayer:not(:hover) .layerListMenuLeft.opaque .layerListButton.active svg
    opacity                 1
.layerListLayer:not(:hover) .layerListMenuLeft.opaque .layerListButton:not(.active) svg
    opacity                 0
    
.layerListMenuRight .layerListButton:last-child 
    border-bottom-left-radius 4px
    
.layerListMenuLeft .layerListButton:last-child
    border-bottom-right-radius 4px
    
.layerListButton svg
    opacity                 0.5
    &:hover
        opacity             1
        
.layerListLayer.active
    filter                  drop-shadow(0 0 12px rgba(0,0,0,0.5))
    z-index                 1 
    
