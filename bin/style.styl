    stroke                  #000
    fill                    #888

    &.selected
        stroke              #800
        fill                #f80

.editLinesBlack
    stroke                  #000
    stroke-dasharray        2,6
    
.editLinesWhite
    stroke                  #fff
    stroke-dasharray        2,6
    stroke-dashoffset       2
    
